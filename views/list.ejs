<%- include("header") -%>

  <nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="/">To-do List</a>
    <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
  </nav>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>


  <div class="box">
    <% newListItems.forEach(function(item){ %>
      <form class="" action="/delete" method="post">
        <div class="item">
          <input id="deleteCheck" class="form-check-input" type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
          <p class="item-text"> <%=  item.name  %> </p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>"></input>
      </form>
    <% }); %>

      <form class="item" action="/<%= listTitle %>" method="post">
        <input class="item-input" type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button class="addbtn" type="submit" name="list" value="<%= listTitle %>">Add</button>
      </form>
  </div>


<%- include("footer") -%>
